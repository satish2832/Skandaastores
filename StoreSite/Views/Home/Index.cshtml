<!-- Start Category Area -->
<section class="htc__category__area ptb--20">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section__title--2">
                    <h2 class="title__line">New Arrivals</h2>
                    <p>But I must explain to you how all this mistaken idea</p>
                </div>
            </div>
        </div>
        <div class="htc__product__container">
            <div class="row">
                <div class="product__list clearfix mt--30">
                    <!-- Start Single Category -->
                    @{
                            foreach (var product in (List<StoreSite.Models.Product>)ViewBag.Products)
                            {
                                var imageUrl = "/Content/Site/images/product/" + product.Code + ".jpg";
                                <div class="col-md-4 col-lg-3 col-sm-4 col-xs-12">
                                <div class="category">
                                    <div class="ht__cat__thumb">
                                        <a href="/productdetails/@product.Code/@product.Title.Replace(" ","-")">
                                            <img src="@imageUrl" alt="@product.Title">
                                        </a>
                                    </div>                                   
                                    <div class="fr__product__inner">
                                        <h4><a href="/productdetails/A100/Boat Rockerz 400 On-Ear Bluetooth Headphones (Carbon Black)/150,100/green,red,blue">Largest Water Pot</a></h4>
                                        <ul class="fr__pro__prize">
                                            <li class="old__prize">Rs. @product.OldValue</li>
                                            <li>Rs. @product.NewValue</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                    <!-- End Single Category -->                  
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Category Area -->
